<%- include("../layout/head")%>
<%- include("../layout/header")%>
<%- include("../layout/sidebar")%>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
            <li><a href="">Quản lý quảng cáo</a></li>
            <li class="active"><%= ad.name %></li>
        </ol>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quảng cáo: <%= ad.name %></h1>
        </div>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form action="/admin/advertisements/update/<%= ad._id %>" role="form" method="post" enctype="multipart/form-data">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Tên quảng cáo</label>
                                <input type="text" name="name" required class="form-control" value="<%= ad.name %>">
                            </div>

                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea name="description" class="form-control" rows="3"><%= ad.description %></textarea>
                            </div>

                            <div class="form-group">
                                <label>Đường dẫn (link)</label>
                                <input type="text" name="link" required class="form-control" value="<%= ad.link %>">
                            </div>

                            <div class="form-group">
                                <label>Loại quảng cáo</label>
                                <select name="type" class="form-control" required>
                                    <option value="slider" <%= ad.type === "slider" ? "selected" : "" %>>Slider</option>
                                    <option value="banner" <%= ad.type === "banner" ? "selected" : "" %>>Banner</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Vị trí</label>
                                <input type="number" name="position" class="form-control" value="<%= ad.position %>">
                            </div>

                            <div class="form-group">
                               <label>Trạng thái</label><br>
                           
                                 <label class="checkbox-inline">
                              <input type="checkbox" name="status" <%= ad.status ? 'checked' : '' %>> Hiển thị
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Ảnh quảng cáo</label>
                                <input type="file" name="image">
                                <br>
                                <% if (ad.image) { %>
                                    <img width="200" src="/upload/<%= ad.image %>">
                                <% } %>
                            </div>

                            <button type="submit" class="btn btn-primary">Cập nhật</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>
                        </div>
                    </form>
                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row-->
</div><!--/.main-->

<%- include("../layout/footer")%>
